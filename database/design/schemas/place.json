{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "Application registered places Mongodb schema",
    "properties": {
        "location-getter": {
            "$comment": "Way to access the place datas",
            "properties": {
                "type": {
                    "type": "number",
                    "$comment": "Enumeration as int"
                },
                "datas": {
                    "type": "object",
                    "$comment": "datas linked to the access type"
                }
            },
            "required": ["type","datas"]
        },
        "comments" : {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "user-id" : {
                        "type": "string",
                        "format": "guid",
                        "description": "user unique identifier"
                    },
                    "comment": {
                        "type": "string",
                        "minLength": 4,
                        "maxLength": 300
                    },
                    "rating": {
                        "type": "number",
                        "minimum": 1,
                        "maximum": 5,
                        "$comment": "Count of rating stars"
                    },
                    "wrote-at": {
                        "type": "string",
                        "format": "date-time",
                        "examples": ["1980-12-03 10:10:20"]
                    }
                },
                "required": ["user-id","comment","rating"]
            }
        }
    },
    "required": ["location","comments","access-id"]
}